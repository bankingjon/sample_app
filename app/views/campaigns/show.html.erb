<% provide(:title, @campaign.name) %>

<h1><%= @campaign.name %></h1>

<div class = "row-fluid">
	<aside class = "span4">
		<section>
 			<h3>Reports</h3>
 			<p><%= link_to "Gift & Donor Reports", '#' %>
 			<p><%= link_to "View Gift Table", display_campaign_donations_path(@campaign.id, format: "html") %></p> 
			<p><%= link_to "Upload Gifts CSV", '#' %></p>
		</section>
 		<section>
 			<h3>Segments / Tiers<h3>
 		</section>
 		<section>
 			<h3>Packages<h3>
 		</section>
 		<section>
 			<h3>Related Campaigns<h3>
 		</section>
 		<section>
		  <h3>Appeal Data</h3>
		  <p><%= link_to "View Table", campaign_appeals_path(@campaign.id, format: "html") %></p>
			<p><%= link_to "Download CSV", campaign_appeals_path(@campaign.id, format: "csv") %></p>
		  <%= form_tag import_campaign_appeals_path(@campaign.id), multipart: true do %>
  			<%= file_field_tag :file %>
  			<%= submit_tag "Import", class: "btn btn-large btn-primary" %>
 		  <% end %>
 		</section>
 		<section>
 			<% if current_user.admin? %>
   				<%= link_to "delete", @campaign, method: :delete,
                                  data: { confirm: "You sure?" } %>
            <% end %>
 		</section>
 	</aside>
 	<div class="span8">
 		<h3>Appeal Statistics as of [Date]</h3>

 		<%= render 'campaigns/campaign_results' %>
 	</div>
</div>
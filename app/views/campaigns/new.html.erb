<% provide(:title, "Create New Campaign") %>
<% @client = Client.find(params[:client_id]) %>


<div class = "row">
	<div class = "span6 offset3">
		<h3>Create a New Campaign for <%= @client.name %></h3>

		<%= form_for(@campaign) do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.hidden_field :client_id, :value => params[:client_id] %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :drop_date, "Mail Date" %>
			<%= f.text_field :drop_date, :placeholder => 'mm/dd/yyyy' %>

			<%= f.submit "Create New Campaign", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>


<% provide(:title, "Create New Campaign") %>
<h1>Create A New Campaign</h1>


<div class = "row">
	<div class = "span6 offset3">
		<%= form_for(@campaign) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :drop_date, "Mail Date" %>
			<%= f.text_field :drop_date, :placeholder => 'mm/dd/yyyy' %>

			<%= f.submit "Create New Campaign", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>


<% provide(:title, "Create New Client") %>
<h1>Create A New Client</h1>


<div class = "row">
	<div class = "span6 offset3">
		<%= form_for(@client) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.submit "Create New Client", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
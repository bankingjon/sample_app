<% provide(:title, 'All Clients') %>
<div class = "row">
	<aside class = "span4">
		<section>
		<p><%= link_to "New Client", new_client_path %></p>
 		</section>
 	</aside>
 	<div class = "span 8">
 	<h3>All Clients</h3>
		
<table class="table table-striped table-bordered" id="appeals">
  <thead>
	  <tr>					
		<th>Client Name</th>
		<th>Campaigns</th>
		<th>Gifts</th>
		<th>Revenue</th>
	  </tr>
  </thead>
  <tbody>
  			
  <% @clients.each do |client| %>

	  <tr>
		<td><%= link_to client.name, client %></td>
		<td><%= client.campaigns.count %></td>
		<td><%= client.donations.count %></td>
		<td>1</td>
	  </tr>
  	<% end %>
  			</tbody>
			</table>
	  </ol>
	</div>
</div>